@model IEnumerable<ledsangviet_chuongnh.Models.Visitor>

@{
    ViewBag.Title = "List visitor";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section PageTitle{
    Visitors
}
@section cssHeader{
    <!-- DataTables -->
    <link href="/Assets/Admin/plugins/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="/Assets/Admin/plugins/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="/Assets/Admin/plugins/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
@section jsFooter{
    <!-- Required datatable js -->
    <script src="/Assets/Admin/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/dataTables.bootstrap4.min.js"></script>
    <!-- Buttons examples -->
    <script src="/Assets/Admin/plugins/datatables/dataTables.buttons.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/buttons.bootstrap4.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/jszip.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/pdfmake.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/vfs_fonts.js"></script>
    <script src="/Assets/Admin/plugins/datatables/buttons.html5.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/buttons.print.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/buttons.colVis.min.js"></script>
    <!-- Responsive examples -->
    <script src="/Assets/Admin/plugins/datatables/dataTables.responsive.min.js"></script>
    <script src="/Assets/Admin/plugins/datatables/responsive.bootstrap4.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();

            //Buttons examples
            var table = $('#datatable-buttons').DataTable({
                LengthMenu: 0,
                lengthChange: false,
                buttons: ['copy', 'excel', 'csv', 'pdf', 'print', 'colvis']
            });

            table.buttons().container()
                    .appendTo('#datatable-buttons_wrapper .col-md-6:eq(0)');
        });

    </script>
}
<div class="card-box">
    <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Browser)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Version)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Platform)
                </th>
                <th>Hành động</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Browser)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Version)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Platform)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Xem", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>

    </table>

</div>