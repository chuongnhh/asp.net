@model ledsangviet_chuongnh.Models.News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var news = (List<ledsangviet_chuongnh.Models.News>)ViewBag.News;
}

<!-- Page-Title -->

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 col-xl-9">
        <div class="row">
            <div class="card-box">
                <div class="row">
                    <div class="col-sm-9">
                        <h3>@Model.Title</h3>
                    </div>
                    <div class="col-sm-3">
                        <p class="pull-md-right pull-lg-right">@Model.CreateDate.ToShortDateString()</p>
                    </div>
                </div>
                <div style="margin-bottom:20px">
                    <p>@Model.CreateBy</p>
                </div>
                <hr />
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 col-xl-3">
        <div class="card-box">
            <h4 class="header-title m-t-0 m-b-20">Tin mới nhất</h4>
            <div class="blog-widget nicescroll">
                @foreach (var n in news)
                {
                    <a href="/tin-tuc/@n.MetaTitle-@n.Id" title="@n.Title">
                        <div class="blog-item">
                            <div class="blog-item-img"><img src="@n.Image" class="img" alt="@n.Title"></div>
                            <p class="blog-item-title">@n.Title.Substring(0, n.Title.Length > 35 ? 35 : n.Title.Length)...</p>
                            <p class="blog-item-text">@n.Description.Substring(0, n.Description.Length > 100 ? 100 : n.Description.Length)...</p>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</div>
<!-- end row -->
