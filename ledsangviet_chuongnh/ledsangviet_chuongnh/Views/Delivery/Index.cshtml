
@{
    ViewBag.Title = "Hệ thống phân phối | Led sáng việt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var deliveries = (List<ledsangviet_chuongnh.Models.Delivery>)ViewBag.Deliveries;
}

<!-- Page-Title -->
<div class="row">
    @foreach (var d in deliveries)
    {
        <div class="col-xs-12">
            <div class="card-box">
                <div class="panel-body">
                    <div class="clearfix">
                        <div class="pull-left">
                            <h2 class="logo" style="color: #2b3d51 !important;">@d.Name.ToUpper()</h2>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-xs-12 col-lg-12 col-xl-5">
                            <div class="thumb">
                                <img src="@d.Image" class="thumb-img">
                            </div>

                        </div><!-- end col -->
                        <div class="col-xs-12 col-lg-12 col-xl-7">
                            <div class="pull-xs-left" style="margin-top: 15px">
                                <address>
                                    <strong>@d.Name</strong><br>
                                    <span>Địa chỉ: @d.Address</span><br>
                                    <span>Email: @d.Email</span><br>
                                    <span>Hotline: @d.Hotline</span>
                                    <hr>
                                    <span>@Html.Raw(d.Description)</span>
                                </address>
                            </div>
                        </div><!-- end col -->
                    </div>
                    <!-- end row -->
                </div>
            </div>
        </div>
    }
</div>
<!-- end row -->